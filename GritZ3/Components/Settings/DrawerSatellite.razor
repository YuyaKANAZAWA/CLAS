@using GritZ3.Pages

@*測位方法設定用ドロワー*@
    <Drawer Width=400 Closable="false" MaskClosable="false" Visible="@DrawerInfo.Visible" Placement="left" Title='("Template")' OnClose="_=>Close_This()">
        <p>
            <Text Strong>GPS Excluding</Text><br/>
            <Select Mode="multiple"
                Placeholder="Please select"
                @bind-Values="@NowStatus.ValuesGps"
                TItemValue="string"
                TItem="string"
                OnSelectedItemsChanged="OnSelectedItemsChangedHandler"
                Style="width: 100%; margin-bottom: 8px;"
                AllowClear>
                <SelectOptions>
                    @foreach(var item in ItemsGps)
                    {
                        <SelectOption TItemValue="string" TItem="string" Value=@item Label=@item />
                    }
                </SelectOptions>
            </Select>

            <Text Strong>GLO Excluding</Text><br/>
