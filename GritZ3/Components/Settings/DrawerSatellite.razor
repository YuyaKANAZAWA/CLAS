                Placeholder="Please select"
		        @bind-Values="@NowStatus.ValuesGal"
		        TItemValue="string"
		        TItem="string"
		        OnSelectedItemsChanged="OnSelectedItemsChangedHandler"
		        Style="width: 100%; margin-bottom: 8px;"
                AllowClear>
